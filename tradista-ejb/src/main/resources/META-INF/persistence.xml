<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="3.0">
	<persistence-unit
		name="tradista-flow-persistence-unit" transaction-type="JTA">
		<description>This is the unique persistence unit of the tradista
			flow
			project.
		</description>
		<jta-data-source>java:/TradistaDataSource</jta-data-source>
		<class>org.eclipse.tradista.flow.model.Workflow</class>
		<class>org.eclipse.tradista.flow.model.Action</class>
		<class>org.eclipse.tradista.flow.model.SimpleAction</class>
		<class>org.eclipse.tradista.flow.model.ConditionalAction</class>
		<class>org.eclipse.tradista.flow.model.Condition</class>
		<class>org.eclipse.tradista.flow.model.Guard</class>
		<class>org.eclipse.tradista.flow.model.Process</class>
		<class>org.eclipse.tradista.flow.model.Status</class>
		<class>org.eclipse.tradista.flow.model.PseudoStatus</class>
		<class>org.eclipse.tradista.flow.model.TradistaFlowObject</class>
		<class>org.eclipse.tradista.security.repo.workflow.condition.IsAllocated
		</class>
		<class>org.eclipse.tradista.security.repo.workflow.guard.CollateralAdded
		</class>
		<class>org.eclipse.tradista.security.repo.workflow.guard.CollateralSubstituted
		</class>
		<class>org.eclipse.tradista.security.repo.workflow.guard.IsPartiallyTerminated
		</class>
		<class>org.eclipse.tradista.security.repo.workflow.guard.TradeEndDateReached
		</class>
		<class>org.eclipse.tradista.security.repo.workflow.guard.IsSubstitutionAllowed
		</class>
		<properties>
			<property name="hibernate.dialect"
				value="org.hibernate.dialect.DerbyDialect" />
			<property name="hibernate.show_sql" value="false" />
		</properties>
	</persistence-unit>
</persistence>