<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.StackPane?>
<?import org.eclipse.tradista.core.currency.ui.view.TradistaCurrencyComboBox?>

<StackPane xmlns="http://javafx.com/javafx/8.0.141"
	xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="org.eclipse.tradista.fx.fxoption.ui.controller.PricingParameterVolatilitySurfaceModuleController">
	<GridPane vgap="10.0" hgap="10.0" maxHeight="-Infinity"
		maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity">
		<columnConstraints>
			<ColumnConstraints />
		</columnConstraints>
		<rowConstraints>
			<RowConstraints vgrow="SOMETIMES" />
			<RowConstraints vgrow="SOMETIMES" />
			<RowConstraints vgrow="SOMETIMES" />
		</rowConstraints>
		<children>
			<HBox maxHeight="-Infinity" maxWidth="-Infinity"
				minHeight="-Infinity" minWidth="-Infinity" GridPane.rowIndex="1">
				<children>
					<TradistaCurrencyComboBox
						fx:id="fxVolatilitySurfacePrimaryCurrencyComboBox"
						maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity">
						<HBox.margin>
							<Insets right="10.0" />
						</HBox.margin>
					</TradistaCurrencyComboBox>
					<TradistaCurrencyComboBox
						fx:id="fxVolatilitySurfaceQuoteCurrencyComboBox"
						maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity">
						<HBox.margin>
							<Insets right="10.0" />
						</HBox.margin>
					</TradistaCurrencyComboBox>
					<ComboBox fx:id="fxVolatilitySurfaceComboBox"
						maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity">
						<HBox.margin>
							<Insets right="10.0" />
						</HBox.margin>
					</ComboBox>
				</children>
				<opaqueInsets>
					<Insets />
				</opaqueInsets>
			</HBox>
			<HBox maxHeight="-Infinity" maxWidth="-Infinity"
				minHeight="-Infinity" minWidth="-Infinity" GridPane.rowIndex="2">
				<children>
					<Button fx:id="addFXVolatilitySurfaceButton"
						maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
						mnemonicParsing="false" onAction="#addFXVolatilitySurface"
						text="Add">
						<HBox.margin>
							<Insets right="10.0" />
						</HBox.margin>
					</Button>
					<Button maxWidth="-Infinity" minHeight="-Infinity"
						minWidth="-Infinity" mnemonicParsing="false"
						onAction="#deleteFXVolatilitySurface" text="Delete">
						<HBox.margin>
							<Insets right="10.0" />
						</HBox.margin>
					</Button>
				</children>
				<opaqueInsets>
					<Insets />
				</opaqueInsets>
			</HBox>
			<TableView fx:id="fxVolatilitySurfaceTable" editable="true"
				maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
				minWidth="-Infinity">
				<columns>
					<TableColumn fx:id="fxVolatilitySurfacePrimaryCurrency"
						text="Primary Currency" />
					<TableColumn fx:id="fxVolatilitySurfaceQuoteCurrency"
						text="Quote Currency" />
					<TableColumn fx:id="fxVolatilitySurface"
						text="Volatility Surface" />
				</columns>
			</TableView>
		</children>
		<padding>
			<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
		</padding>
	</GridPane>
</StackPane>